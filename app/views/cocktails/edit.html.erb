<h1>Editing a Cocktail</h1>

<div class="container">
  <form>
  <h2> Add a dose</h2>
  <%= simple_form_for [@cocktail, Dose.new] do |f| %>
    <div class="form-group">
      <%= f.input :description, placeholder: "Amount of ingredients"%>
    </div>
    <div class="form-group">
      <%= f.association :ingredient %>
    </div>
      <%= f.submit "Add ingredient to the mocktail" %>
    <% end %>
</div>

<%= link_to 'Show', @cocktail %> |
<%= link_to 'Back', cocktails_path %>


