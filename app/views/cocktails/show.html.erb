<p id="notice"><%= notice %></p>
<!-- displayed on laptops -->
<div class="navbar" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1536918242710-881151fb107f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1383&h=200&q=80');">
  <h3 class="glow">Miss Mocktail</h3>
</div>

<div class="bar">
<%= link_to "Back to cocktails", cocktails_path %>
<%= link_to "Add a New Cocktail", new_cocktail_path, class: 'btn btn-gradient'%>
</div>

<div class="cocktails-container">
  <h1 class="cocktail-title"> <%= @cocktail.name %> </h1>
  <div class="cocktails-show-container">
    <div class="cocktails-picture">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="cocktails-ingredients">
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li> <i class="fas fa-cocktail"></i> <%= dose.description %> <%= dose.ingredient.name %> </li>
        <% end %>
      </ul>
    </div>
  </div>


<div class="container">
  <form>
  <h2> Add a dose</h2>
  <%= simple_form_for [@cocktail, Dose.new] do |f| %>
    <div class="form-group">
      <%= f.input :description, placeholder: "Amount of ingredients"%>
    </div>
    <div class="form-group">
      <%= f.association :ingredient %>
    </div>
      <%= f.submit "Add ingredient to the mocktail" %>
    <% end %>

</div>
