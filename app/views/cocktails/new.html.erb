<!-- displayed on laptops -->
<div class="navbar" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1536918242710-881151fb107f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1383&h=200&q=80');">
  <h3 class="glow">Miss Mocktail</h3>
</div>




<div class="container">
  <div class="cocktails-container">
    <!-- <h3>New Mocktail</h3> -->
    <h4>Pick a nice picture of your drink and send us your recipe</h4>
    <%= simple_form_for @cocktail do |f| %>
      <div class="form-group">
        <%= f.input :name %>
      </div>
      <div class="form-group">
        <%= f.input :photo, placeholder: "Upload a picture" %>

      </div>
      <%= f.submit "Add a new mocktail", class: 'btn btn-gradient'%>
      <% end %>
  </div>
</div>
<br>

<div class="bar">
  <%= link_to "Back to cocktails", cocktails_path %>
  <%= link_to "Add a New Cocktail", new_cocktail_path, class: 'btn btn-gradient'%>
</div>
